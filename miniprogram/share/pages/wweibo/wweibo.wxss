.container {
  padding: 40rpx 60rpx;
}

.container .textarea {
  font-size: 28rpx;
  width: 100%;
  height: 200rpx;
  /* background-color: red; */
}

.container .image-list-group {
  padding-top: 10px;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.image-list-group .image-group {
  margin-right: 2.5px;
  margin-bottom: 2.5px;
  position: relative;
  /* 非静态定位 */
}

.image-list-group .image-group image {
  width: 100%;
  height: 100%;
}

.image-list-group .image-group .close-btn {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: -30rpx;
  top: -30rpx;
  z-index: 1;
  background-size: 50rpx;
  background-repeat: no-repeat;
  background-position: center;
  /* 图片只能使用base64或者线上图片，不能使用本地图片 */
  background-image: url("https://7465-test-xchgb-1259365888.tcb.qcloud.la/CaiJi/TestImage/%E5%85%B3%E9%97%AD%E6%8C%89%E9%92%AEi.png?sign=da050124c5b87f3fd86a73da43e5e750&t=1563026276")
}

.add-image-btn view {
  margin-top: -20rpx;
}

.image-list-group .add-image-btn {
  font-size: 200rpx;
  background: #f2f2f2;
  color: #a9a9a9;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .location-group {
  margin-top: 40rpx;
  border-top: 1px solid #e4e4e4;
  border-bottom: 1px solid #e4e4e4;
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location-group .left-group {
  display: flex;
  font-size: 28rpx;
}

.location-group .left-group .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 40rpx;
}

.location-group .arrow {
  width: 40rpx;
  height: 40rpx;
}

.submit-btn {
  margin-top: 40rpx;
}