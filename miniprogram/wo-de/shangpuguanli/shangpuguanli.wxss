}
.touxiang {
  position: absolute;
  left: 25rpx;
  top: 28rpx;
}
.border{
  border-top: 3rpx solid gainsboro;
  border-bottom: 3rpx solid gainsboro;
}
.cu-list.menu-avatar>.cu-item .action {
width: 100rpx;
text-align: center;
height: 100%;
margin-top: 20px;
}
.cu-list.menu-avatar>.cu-item .actionion {
width: 100%;
height: 100%;
margin-top: 380rpx;
margin-left: 145rpx;
}
.cu-btn {
position: relative;
border: 0rpx;
display: inline-flex;
align-items: center;
justify-content: center;
box-sizing: border-box;
padding: 0 30rpx;
font-size: 28rpx;
height: 55rpx;
line-height: 1;
text-align: center;
text-decoration: none;
overflow: visible;
margin-left: initial;
transform: translate(0rpx, 0rpx);
margin-right: initial;
}


